#include <stdio.h>
#include <math.h>
int main(void)
{
    int n[20];
    int i;
    int sum = 0;
    float average;
    for (i=0; i<20; i++)
    {
        n[i] = i+1;
        sum += n[i];
        printf("Array[%d]=%d \n", i , n[i]);
    }
    average = sum / 20.0;
    printf("sum of array: %d \n" , sum);
    printf("Average of array: %5.2f ", average);

}
